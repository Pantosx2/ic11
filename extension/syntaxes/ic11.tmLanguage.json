{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ic11",
	"scopeName": "source.ic11",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#includes"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "includes": {
      "patterns": [
        {
          "name": "keyword.control.directive.include.ic11",
          "match": "^\\s*#include\\b"
        },
        {
          "name": "string.quoted.other.include.ic11",
          "match": "(?<=^\\s*#include\\s*)<[^>\\r\\n]*\\.[^>\\r\\n]+>"
        },
        {
          "name": "string.quoted.double.include.ic11",
          "match": "(?<=^\\s*#include\\s*)\"[^\"\\r\\n]*\\.[^\"\\r\\n]+\""
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ic11",
          "match": "\\b(pin|void|real|yield|return|continue|var|const|while|if|else|for|sleep|break|hcf)\\b"
        },
        {
          "name": "support.type.device.ic11",
          "match": "\\b(Base|DeviceWithId|DevicesOfType|WithName)\\b"
        },
        {
          "name": "constant.language.pin.ic11",
          "match": "\\b(db|d0|d1|d2|d3|d4|d5)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.name.ic11",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        },
        {
          "name": "entity.name.function.ic11",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.ic11",
          "match": "(\\+|\\-|\\*|\\/|%|<|>|<=|>=|==|!=|=)"
        },
        {
          "name": "keyword.operator.logical.ic11",
          "match": "(\\&\\&|\\|\\||!)"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.ic11",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.ic11",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.language.boolean.ic11",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "string.quoted.double.ic11",
          "match": "\"(?:[^\"\\\\]|\\\\.)*\""
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ic11",
          "match": "//.*$"
        },
        {
          "name": "comment.block.ic11",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    }
  }
}
